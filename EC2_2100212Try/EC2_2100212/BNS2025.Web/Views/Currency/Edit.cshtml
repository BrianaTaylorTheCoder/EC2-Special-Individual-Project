@model CurrencyViewModel

@{
    ViewData["Title"] = "Edit Currency";
}

<h3>Edit Currency</h3>

<hr />
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="control-label"></label>
                <input asp-for="ShortName" class="form-control" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>

            <div class="form-group mt-5">
                <div class="btn-group" role="group">
                    <input type="submit" value="Update Currency" asp-action="Edit" class="btn btn-primary btn-block" />
                    <a class="btn btn-info btn-block" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@model MaterialViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Material</h1>

<hr />
<div class="row">
    <form enctype="multipart/form-data" asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-group col-8">
            <div class="card">
                <img src="~/img/defaultUser.jpg" id="imgImage" alt="Material Image" style="width:60%; align-self:center" />
                <div class="form-group">
                    <div class="custom-file m-3">
                        <input hidden asp-for="Image" type="text" />
                        <input asp-for="ImageFile" type="file" class="form-control custom-file-input" id="fuImage"
                               onchange="document.getElementById('imgImage').src = window.URL.createObjectURL(this.files[0])" />
                        <label class="custom-file-label" for="Image"></label>
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group m-3 d-grid gap-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model MaterialViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Material</h4>
    <hr />
    <div class="card-group col-8">
        <div class="card">
            <img class="card-img-top" src="~/img/@Model?.Image" style="60%" alt="Card image cap">
        </div>
        <div class="card">
            <div class="card-body">
                <h2 class="card-title mb-5">@Html.DisplayFor(model => model.Name)</h2>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="btn-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-primary" asp-action="Index"><i class="bi bi-card-list"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>


</div>

@model BagViewModel

@{
    ViewData["Title"] = "Edit";
}
<h1 class="mt-3">Edit Bag</h1>

<hr />
<div class="container-fluid">

    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="row">
            <div class="col-6">
                <input hidden asp-for="Image" type="text" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-1">
                    <input asp-for="Brand" class="form-control" />
                    <label asp-for="Brand" class="control-label"></label>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Model" class="form-control" />
                    <label asp-for="Model" class="control-label"></label>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Colour" class="form-control" />
                    <label asp-for="Colour" class="control-label"></label>
                    <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
                <div class="form-group mb-1">
                    <label asp-for="CategorySelectedList" class="control-label"></label>
                    <select asp-for="CategorySelectedList" asp-items="@Model?.ListOfCategories" 
                        data-placeholder="select categories" class="form-control chosen" multiple>
                        <option value="0">
                            --Select All Categories--
                        </option>
                    </select>
                </div>
                <div class="form-group mb-1">
                    <label asp-for="MaterialSelectedList" class="control-label"></label>
                    <select asp-for="MaterialSelectedList" asp-items="@Model?.ListOfMaterials" 
                        data-placeholder="select materials" class="form-control chosen" multiple>
                        <option value="0">
                            --Select Materials--
                        </option>
                    </select>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Quantity" class="form-control" />
                    <label asp-for="Quantity" class="control-label"></label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Price" class="form-control" />
                    <label asp-for="Price" class="control-label"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="ManufactureDate" class="form-control" />
                    <label asp-for="ManufactureDate" class="control-label"></label>
                    <span asp-validation-for="ManufactureDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <div class="d-grid">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                        <a class="btn btn-info" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <img src="~/img/@Model.Image" id="imgImage" alt="Image" width="250" />
                <div class="form-group">
                    <div class="custom-file">
                        <input asp-for="ImageFile" type="file" class="form-control custom-file-input" id="fuImage"
                               onchange="document.getElementById('imgImage').src = window.URL.createObjectURL(this.files[0])" />
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>

</div>


@section Scripts {
    <script>

        $(function () {
            $(".chosen").chosen();
        });

    </script>
}
@model IEnumerable<EC2_2100212.ViewModels.OrderViewModel>

<h2>All Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Bag ID</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Transaction Date</th>
            <th>Shipping Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.BagId</td>
                <td>@order.Quantity</td>
                <td>@order.Total</td>
                <td>@order.TransactionDate</td>
                <td>@order.ShippingAddress</td>
            </tr>
        }
    </tbody>
</table>
